            <th>
                @Html.DisplayNameFor(model => model.Tuotteet.Määrä)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:black">
                    No Match Any Document
                </td>
            </tr>
        }

        else
        {

           foreach (var item in Model)
           {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuotteet.TuoteID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuotteet.TuoteMerkki)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuotteet.TuoteMalli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VarastoPaikka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuotteet.Määrä)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.VarastoID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.VarastoID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.VarastoID })
                </td>
            </tr>
           }
        }

    </tbody>
</table>
<p>
