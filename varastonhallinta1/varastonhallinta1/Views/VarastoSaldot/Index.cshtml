@model IEnumerable<varastonhallinta1.Models.VarastoSaldot>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
@using (Html.BeginForm("index", "VarastoSaldot", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="Search" />
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tuotteet.TuoteID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tuotteet.TuoteMerkki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tuotteet.TuoteMalli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VarastoPaikka)
