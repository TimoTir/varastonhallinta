<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SuperWMS", "Index", "Login", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tuotteet","Index", "Tuotteet")</li>
                    <li>@Html.ActionLink("Toimittajat","Index", "Toimittajat")</li>
                    <li>@Html.ActionLink("Tuoteluokat","Index", "TuoteLuokittelu")</li>
                    <li>@Html.ActionLink("Asiakkaat","Index", "Asiakkaat")</li>
                    <li>@Html.ActionLink("Henkilökunta","Index", "Henkilöstö")</li>
                    <li>@Html.ActionLink("Roolit","Index", "Roolit")</li>
                    <li>@Html.ActionLink("Tilaukset","Index", "Tilaukset")</li>
                    <li>@Html.ActionLink("Saldot","Index", "Varastosaldot")</li>
                    <li>@Html.ActionLink("Login","Index", "Logins")</li>
                    <li>@Html.ActionLink("Tuoteluokat","Index", "TuoteLuokittelu")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My WMS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
