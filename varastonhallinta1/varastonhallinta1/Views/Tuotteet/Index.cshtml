@model IEnumerable<varastonhallinta1.Models.Tuotteet>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<button>
    @Html.ActionLink("Lisää uusi tuote +", "Create") |
</button>
<br />
<br />

@using (Html.BeginForm("index", "Tuotteet", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="Search" />
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TuoteID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TuoteMerkki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TuoteMalli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sarjanumero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Määrä)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TuoteLuokittelu.TuoteLuokka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VastanottoPvm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toimittajat.YritysNmi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:black">
                    No Match Any Document
                </td>
            </tr>
        }

        else
        {

        
            foreach (var item in Model)
            {
                <tr>
                    <td>
                         @Html.DisplayFor(modelItem => item.TuoteID)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.TuoteMerkki)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.TuoteMalli)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sarjanumero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Määrä)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TuoteLuokittelu.TuoteLuokka)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VastanottoPvm)
                    </td>
                    <td>
                         @Html.DisplayFor(modelItem => item.Toimittajat.YritysNmi)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TuoteID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TuoteID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TuoteID })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
